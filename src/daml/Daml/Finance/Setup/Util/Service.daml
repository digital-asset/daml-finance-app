createCustodyService : Party -> Party -> Party -> ContractId Settlement.Factory -> Script (ContractId Custody.Service)
createCustodyService operator custodian customer factoryCid = do
  offerCid <- submit custodian do exerciseByKeyCmd @Custodian.Role (operator, custodian) Custodian.OfferCustodyService with customer; factoryCid
  submit customer do exerciseCmd offerCid Custody.Accept

