template CreateZeroCouponBondRequest
  with
    operator : Party
    provider : Party
    customer : Party
    id : Id
    issueDate : Date
    maturityDate : Date
    cashInstrumentCid : Instrument.K
    observers : Observers
    lastEventTimestamp : Time
  where
    signatory operator, provider, customer

