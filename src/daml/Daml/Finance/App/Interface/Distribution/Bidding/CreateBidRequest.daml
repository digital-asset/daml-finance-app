module Daml.Finance.App.Interface.Distribution.Bidding.CreateBidRequest where

import Daml.Finance.App.Interface.Common.Removable qualified as Removable (I, Implementation)
import Daml.Finance.Interface.Holding.Fungible qualified as Fungible (I)
import Daml.Finance.Interface.Types.Common.Types (AccountKey, Id, InstrumentQuantity)

type I = CreateBidRequest

type V = View

data View = View
  with
    operator : Party
    provider : Party
    customer : Party
    issuer : Party
    auctionId : Id
    quantity : InstrumentQuantity
    price : InstrumentQuantity
    collateralCid : ContractId Fungible.I
    receivableAccount : AccountKey
  deriving (Eq, Show)

interface CreateBidRequest where
  viewtype View
    -- ^ Interface view type.
  asRemovable : Removable.I
    -- ^ Conversion to the `Removable` interface.

-- | Type constraint for requiring templates to implement `CreateBidRequest`.
type Implementation t = (HasToInterface t CreateBidRequest, Removable.Implementation t)
class (Implementation t) => HasImplementation t
instance HasImplementation CreateBidRequest
instance HasToInterface CreateBidRequest Removable.I where _toInterface = asRemovable
